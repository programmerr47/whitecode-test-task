<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_section_height_default">

    <TextView
        android:id="@+id/sectionName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_default"
        android:textColor="@color/blue_bright"
        android:text="A"
        android:background="@color/white_semitransparent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/section_divider_height"
        android:background="@color/blue_bright"/>

</LinearLayout>